# Lyss AI Platform 统一环境配置
# 所有服务使用这个统一的配置文件

# ===========================================
# 基础应用配置
# ===========================================
SECRET_KEY=dev-secret-key-not-for-production-32chars
ENVIRONMENT=development
DEBUG=true

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=lyss
DB_PASSWORD=123456
DB_DATABASE=lyss_db
DB_SSL_MODE=disable
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===========================================
# Redis 配置
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=lyss_redis_dev_password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=25

# ===========================================
# JWT 认证配置
# ===========================================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===========================================
# 安全配置
# ===========================================
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_SPECIAL=false
DEFAULT_RATE_LIMIT=1000
BURST_RATE_LIMIT=2000

# ===========================================
# API网关配置
# ===========================================
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ===========================================
# EINO 服务配置
# ===========================================
EINO_HOST=localhost
EINO_PORT=8080
EINO_TIMEOUT=60

# ===========================================
# Memory 服务配置 (符合Mem0AI标准)
# ===========================================
MEMORY_HOST=localhost
MEMORY_PORT=8001
MEMORY_TIMEOUT=30

# Memory服务专用配置
MEMORY_RETENTION_DAYS=365
MAX_MEMORIES_PER_USER=10000
SIMILARITY_THRESHOLD=0.7
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100

# 向量数据库配置
VECTOR_DB_PROVIDER=redis

# Embedding配置
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_MAX_LENGTH=512
EMBEDDING_BATCH_SIZE=32

# ===========================================
# 系统级AI配置 (仅用于基础AI服务)
# ===========================================
# 注意：这些密钥仅用于Mem0AI等系统级AI服务
# 用户的AI配置存储在数据库中，支持多租户

# Mem0AI需要的默认LLM (必需)
OPENAI_API_KEY=sk-test-key-for-development-only
OPENAI_BASE_URL=https://api.openai.com/v1

# 可选：如果使用OpenAI embedding
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# ===========================================
# 前端配置
# ===========================================
NODE_ENV=development
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
CHOKIDAR_USEPOLLING=true

# ===========================================
# 监控和日志配置
# ===========================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ===========================================
# 开发环境配置
# ===========================================
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATA=true
DISABLE_RATE_LIMITING=true

# ===========================================
# 健康检查配置
# ===========================================
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# ===========================================
# 租户配置
# ===========================================
MAX_TENANTS=100

# ===========================================
# 文件上传配置
# ===========================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,jpeg,png,gif
UPLOAD_DIR=/tmp/lyss-uploads

# ===========================================
# Docker 配置
# ===========================================
COMPOSE_PROJECT_NAME=lyss-ai-platform-dev

# ===========================================
# 开发工具配置
# ===========================================
PGADMIN_DEFAULT_EMAIL=dev@lyss.ai
PGADMIN_DEFAULT_PASSWORD=devpassword