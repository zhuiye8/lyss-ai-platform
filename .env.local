# 本地开发环境配置
# 用于本地运行应用服务时的环境变量

# 应用环境
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev-secret-key-not-for-production-change-this

# 数据库配置（连接本地Docker中的PostgreSQL）
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=lyss_dev_user
DB_PASSWORD=lyss_dev_password
DB_DATABASE=lyss_platform_dev
DB_SSL_MODE=disable

# Redis配置（连接本地Docker中的Redis）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=lyss_redis_dev_password
REDIS_DB=0

# 服务间通信（本地开发）
EINO_HOST=localhost
EINO_PORT=8080
MEMORY_HOST=localhost
MEMORY_PORT=8001

# JWT配置
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# 开发环境宽松配置
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_SPECIAL=false
DEFAULT_RATE_LIMIT=1000
BURST_RATE_LIMIT=2000

# AI服务配置（请替换为真实的API密钥）
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# 记忆服务配置
VECTOR_DB_PROVIDER=redis
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
MEMORY_RETENTION_DAYS=30
MAX_MEMORIES_PER_USER=1000
SIMILARITY_THRESHOLD=0.6

# 监控配置
LOG_LEVEL=DEBUG
METRICS_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# 前端配置
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000