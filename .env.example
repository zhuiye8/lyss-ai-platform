# Lyss AI Platform 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 应用环境配置
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production-must-be-32-chars-long

# API 配置
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=lyss_user
DB_PASSWORD=lyss_password
DB_DATABASE=lyss_platform
DB_SSL_MODE=prefer
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=lyss_redis_password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# JWT 认证配置
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码策略配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# 速率限制配置
DEFAULT_RATE_LIMIT=100
BURST_RATE_LIMIT=200

# 外部服务配置
EINO_HOST=localhost
EINO_PORT=8080
EINO_TIMEOUT=30

MEMORY_HOST=localhost
MEMORY_PORT=8001
MEMORY_TIMEOUT=10

# AI 服务配置
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# 监控配置
PROMETHEUS_PORT=8000
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
LOG_LEVEL=INFO
METRICS_ENABLED=true

# 健康检查配置
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# 租户配置
MAX_TENANTS=1000

# 记忆服务配置
VECTOR_DB_PROVIDER=redis
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
MEMORY_RETENTION_DAYS=365
MAX_MEMORIES_PER_USER=10000
SIMILARITY_THRESHOLD=0.7

# EINO 服务配置（Go服务）
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
WORKFLOW_MAX_CONCURRENCY=100
WORKFLOW_EXECUTION_TIMEOUT=5m
AI_DEFAULT_PROVIDER=openai
AI_TIMEOUT=30s
AI_MAX_RETRIES=3

# 前端配置
NODE_ENV=development
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Docker 配置
COMPOSE_PROJECT_NAME=lyss-ai-platform

# 开发工具配置
PGADMIN_DEFAULT_EMAIL=admin@lyss.ai
PGADMIN_DEFAULT_PASSWORD=admin

# 生产环境配置（仅在生产环境使用）
# HTTPS_REDIRECT=true
# SECURE_COOKIES=true
# CORS_ORIGINS=https://yourdomain.com