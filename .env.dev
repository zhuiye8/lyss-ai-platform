# Lyss AI Platform 开发环境配置
# 开发环境专用的环境变量配置

# 应用环境配置
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev-secret-key-not-for-production-32chars

# API 配置
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# 数据库配置（开发环境）
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=lyss_dev_user
DB_PASSWORD=lyss_dev_password
DB_DATABASE=lyss_platform_dev
DB_SSL_MODE=disable
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis 配置（开发环境）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=lyss_redis_dev_password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=25

# JWT 认证配置（开发环境）
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# 密码策略配置（开发环境宽松）
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_SPECIAL=false

# 速率限制配置（开发环境宽松）
DEFAULT_RATE_LIMIT=1000
BURST_RATE_LIMIT=2000

# 外部服务配置
EINO_HOST=localhost
EINO_PORT=8080
EINO_TIMEOUT=60

MEMORY_HOST=localhost
MEMORY_PORT=8001
MEMORY_TIMEOUT=30

# AI 服务配置（开发环境使用测试key）
OPENAI_API_KEY=sk-test-key-for-development-only
ANTHROPIC_API_KEY=sk-ant-test-key-for-development-only
GOOGLE_API_KEY=test-google-api-key-for-development-only

# 监控配置（开发环境）
PROMETHEUS_PORT=8000
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=DEBUG
METRICS_ENABLED=true

# 健康检查配置
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# 租户配置
MAX_TENANTS=100

# 记忆服务配置（开发环境）
VECTOR_DB_PROVIDER=redis
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
MEMORY_RETENTION_DAYS=30
MAX_MEMORIES_PER_USER=1000
SIMILARITY_THRESHOLD=0.6

# EINO 服务配置（开发环境）
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
WORKFLOW_MAX_CONCURRENCY=50
WORKFLOW_EXECUTION_TIMEOUT=10m
AI_DEFAULT_PROVIDER=openai
AI_TIMEOUT=60s
AI_MAX_RETRIES=5

# 前端配置
NODE_ENV=development
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
CHOKIDAR_USEPOLLING=true

# Docker 配置
COMPOSE_PROJECT_NAME=lyss-ai-platform-dev

# 开发工具配置
PGADMIN_DEFAULT_EMAIL=dev@lyss.ai
PGADMIN_DEFAULT_PASSWORD=devpassword

# 开发环境特殊配置
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATA=true
FAKE_EMAIL_BACKEND=true
DISABLE_RATE_LIMITING=true

# 日志配置（开发环境详细日志）
LOG_FORMAT=detailed
LOG_FILE_ENABLED=false
LOG_CONSOLE_ENABLED=true

# 缓存配置（开发环境短TTL）
CACHE_DEFAULT_TTL=300
CACHE_USER_SESSION_TTL=3600
CACHE_API_RESPONSE_TTL=60

# 文件上传配置（开发环境）
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,jpeg,png,gif
UPLOAD_DIR=/tmp/lyss-uploads

# 邮件配置（开发环境使用本地SMTP）
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false
FROM_EMAIL=noreply@lyss.dev