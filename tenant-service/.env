# Lyss AI Platform - Tenant Service 环境变量配置

# ===== 服务配置 =====
TENANT_SERVICE_PORT=8002
TENANT_SERVICE_HOST=0.0.0.0
TENANT_SERVICE_ENVIRONMENT=development
TENANT_SERVICE_DEBUG=true
TENANT_SERVICE_LOG_LEVEL=INFO

# ===== 数据库配置 =====
TENANT_SERVICE_DB_HOST=localhost
TENANT_SERVICE_DB_PORT=5433
TENANT_SERVICE_DB_USERNAME=lyss
TENANT_SERVICE_DB_PASSWORD=test
TENANT_SERVICE_DB_DATABASE=lyss_db
TENANT_SERVICE_DB_POOL_SIZE=20
TENANT_SERVICE_DB_MAX_OVERFLOW=30

# ===== pgcrypto加密密钥 =====
# 🚨 重要：生产环境必须使用至少32字符的强密钥
TENANT_SERVICE_PGCRYPTO_KEY=lyss_pgcrypto_secret_2025_replace_in_production_32

# ===== 密码策略配置 =====
TENANT_SERVICE_MIN_PASSWORD_LENGTH=8
TENANT_SERVICE_REQUIRE_SPECIAL_CHARS=true
TENANT_SERVICE_REQUIRE_NUMBERS=true
TENANT_SERVICE_REQUIRE_UPPERCASE=true

# ===== 速率限制配置 =====
TENANT_SERVICE_MAX_REQUESTS_PER_MINUTE=100
TENANT_SERVICE_RATE_LIMIT_WINDOW=60

# ===== 审计日志配置 =====
TENANT_SERVICE_AUDIT_LOG_ENABLED=true
TENANT_SERVICE_AUDIT_LOG_LEVEL=INFO

# ===== 日志配置 =====
TENANT_SERVICE_LOG_FORMAT=json
TENANT_SERVICE_LOG_FILE_PATH=logs/tenant_service.log