# =================================
# Backend API Gateway 环境变量配置
# =================================

# 服务配置
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
API_GATEWAY_DEBUG=true

# JWT配置 (必须与Auth Service使用相同的密钥)
API_GATEWAY_SECRET_KEY=lyss_auth_jwt_secret_key_2025_replace_in_production_32chars
API_GATEWAY_ALGORITHM=HS256
API_GATEWAY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
API_GATEWAY_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
API_GATEWAY_CORS_ALLOW_CREDENTIALS=true

# 服务注册表 - 下游微服务地址
AUTH_SERVICE_URL=http://localhost:8001
TENANT_SERVICE_URL=http://localhost:8002
EINO_SERVICE_URL=http://localhost:8003
MEMORY_SERVICE_URL=http://localhost:8004

# 请求配置
API_GATEWAY_REQUEST_TIMEOUT=30
API_GATEWAY_MAX_REQUEST_SIZE=10485760  # 10MB

# 日志配置
API_GATEWAY_LOG_LEVEL=INFO
API_GATEWAY_LOG_FORMAT=json

# 健康检查配置
API_GATEWAY_HEALTH_CHECK_INTERVAL=30
API_GATEWAY_HEALTH_CHECK_TIMEOUT=5

# 速率限制
API_GATEWAY_RATE_LIMIT_REQUESTS=100
API_GATEWAY_RATE_LIMIT_WINDOW=60

# 环境标识
ENVIRONMENT=development